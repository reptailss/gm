{
	"name": "os-gm",
	"version": "1.3.1",
	"description": "Gm code generator",
	"main": "dist/index.js",
	"types": "dist/types/index.d.ts",
	"scripts": {
		"build": "tspc --build tsconfig.build.json",
		"copy-templates": "copyfiles -u 1 templates/**/* dist/templates",
		"build-lib": "npm run build && npm run copy-templates",
		"dev": "nodemon ./src/dev.ts",
		"g-crud": "node ./dist/commands/gCrudModule.js",
		"r-g-crud": "npm run build & node ./dist/commands/gCrudModule.js",
		"create-app": "node ./dist/commands/createApp.js",
		"set-global-config": "node ./dist/commands/setGlobalConfig.js",
		"type-check": "tsc --noEmit"
	},
	"bin": {
		"os-gm": "cli.js"
	},
	"type": "commonjs",
	"author": "One soft",
	"license": "ISC",
	"dependencies": {
		"@prettier/sync": "0.4.0",
		"ejs": "^3.1.10",
		"inquirer": "^12.9.6",
		"json5": "^2.2.3",
		"ts-node": "10.9.2",
		"typescript": "5.4.2"
	},
	"devDependencies": {
		"@types/ejs": "^3.1.5",
		"@types/node": "22.7.6",
		"copyfiles": "^2.4.1",
		"nodemon": "2.0.20",
		"ts-patch": "^3.3.0",
		"tsconfig-paths": "^4.2.0",
		"typescript-transform-paths": "^3.5.5"
	}
}
